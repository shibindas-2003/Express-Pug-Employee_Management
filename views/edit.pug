extends layout

block content
  h2 Edit Employee
  form(action=`/update/`+employee._id, method="POST")
    label Employee ID
    input(type="number", name="Emp_id", value=employee.Emp_id, required)
    br
    label Employee Name
    input(type="text", name="Emp_name", value=employee.Emp_name, required)
    br
    label Employee Email
    input(type="text", name="Emp_email", value=employee.Emp_email, required)
    br
    label Employee Number
    input(type="number", name="Emp_number", value=employee.Emp_number, required)
    br
    label Employee Gender
    input(type="text", name="Emp_gender", value=employee.Emp_gender , required)
    br
    label Employee Dept
    input(type="text", name="Emp_dept", value=employee.Emp_dept, required)
    br
    label Employee Location 
    input(type="text", name="Emp_loc", value=employee.Emp_loc, required)
    br
    button(type="submit") Update