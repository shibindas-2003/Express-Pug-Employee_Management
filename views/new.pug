extends layout

block content
  h2 Add New Employee
  form(action="/create", method="POST")
    label Employee ID
    input(type="number", name="Emp_id", required)
    br
    label Employee Name
    input(type="text", name="Emp_name", required)
    br
    label Employee Email
    input(type="text", name="Emp_email", required)
    br
    label Employee Number
    input(type="number", name="Emp_number", required)
    br
    label Employee Gender
    input(type="text", name="Emp_gender",  required)
    br
    label Employee Dept
    input(type="text", name="Emp_dept",  required)
    br
    label Employee Location 
    input(type="text", name="Emp_loc", required)
    br
    button(type="submit") Add